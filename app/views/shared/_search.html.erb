<%= form_tag sofas_path, method: :get do %>
  <div class="row">
    <div class="col-xs-4">
      <%= text_field_tag :location,
        params[:location],
        class: "form-control",
        placeholder: "Location"
      %>
    </div>
    <div class="col-xs-4">
      <%= text_field_tag :capacity,
        params[:capacity],
        class: "form-control",
        placeholder: "Seat capacity"
      %>
    </div>
     <div class="col-xs-4">
      <%= text_field_tag :km,
        params[:km],
        class: "form-control",
        placeholder: "Km"
      %>
    </div>
  </div>

  <%= submit_tag "Find a sofa", class: 'link-to-button' %>
<% end %>

