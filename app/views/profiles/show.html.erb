<div class="container">

  <h2>Welcome back, <%= @user.name %>&nbsp<%= @user.surname %></h2>

  <h4><p>My profile</p></h4>

  <div>
    <p><b>Email:        </b> <%= @user.email %></p>
    <p><b>Phone number: </b> <%= @user.phone_number %></p>
    <p><b>Birth date:   </b> <%= @user.birthdate %></p>
    <p><b>About Me:     </b> <%= @user.about_me %></p>
  </div>

  <div>
    <h4>My bookings</h4>
    <ul class="list-unstyled">
      <% @user.bookings.each do |booking| %>
      <li><b><%= booking.sofa.name %></b> | From <%= booking.start_date %> | <b>Total: $ <%= ((booking.end_date.to_date - booking.start_date.to_date).to_i) * booking.sofa.price_per_day %></b></li>
      <% end %>
    </ul>
  </div>

  <p><%= link_to "Edit Profile", edit_profile_path(@user), class: "link-to-button" %></p>
  <p><%= link_to "Change Password", edit_user_registration_path, class: "link-to-button" %></p>

</div>
